@page "/login"
@layout Layout.BlankLayout
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject Orbit.Application.Auth.IAuthService Auth
@inject NavigationManager Nav
@using Orbit.Web.Security
@inject CircuitAuthenticationStateProvider CircuitAuth

<HeadContent>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet" />
</HeadContent>

<div class="bg-background-light dark:bg-background-dark font-display text-text-light dark:text-text-dark bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/10 to-transparent">
    <div class="flex min-h-screen flex-col">
        <header class="flex items-center justify-between border-b border-border-light dark:border-border-dark px-6 py-4 sm:px-10">
            <div class="flex items-center gap-3">
                <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                    <path d="M39.5563 34.1455V13.8546C39.5563 15.708 36.8773 17.3437 32.7927 18.3189C30.2914 18.916 27.263 19.2655 24 19.2655C20.737 19.2655 17.7086 18.916 15.2073 18.3189C11.1227 17.3437 8.44365 15.708 8.44365 13.8546V34.1455C8.44365 35.9988 11.1227 37.6346 15.2073 38.6098C17.7086 39.2069 20.737 39.5564 24 39.5564C27.263 39.5564 30.2914 39.2069 32.7927 38.6098C36.8773 37.6346 39.5563 35.9988 39.5563 34.1455Z" fill="currentColor"></path>
                    <path clip-rule="evenodd" d="M10.4485 13.8519C10.4749 13.9271 10.6203 14.246 11.379 14.7361C12.298 15.3298 13.7492 15.9145 15.6717 16.3735C18.0007 16.9296 20.8712 17.2655 24 17.2655C27.1288 17.2655 29.9993 16.9296 32.3283 16.3735C34.2508 15.9145 35.702 15.3298 36.621 14.7361C37.3796 14.246 37.5251 13.9271 37.5515 13.8519C37.5287 13.7876 37.4333 13.5973 37.0635 13.2931C36.5266 12.8516 35.6288 12.3647 34.343 11.9175C31.79 11.0295 28.1333 10.4437 24 10.4437C19.8667 10.4437 16.2099 11.0295 13.657 11.9175C12.3712 12.3647 11.4734 12.8516 10.9365 13.2931C10.5667 13.5973 10.4713 13.7876 10.4485 13.8519ZM37.5563 18.7877C36.3176 19.3925 34.8502 19.8839 33.2571 20.2642C30.5836 20.9025 27.3973 21.2655 24 21.2655C20.6027 21.2655 17.4164 20.9025 14.7429 20.2642C13.1498 19.8839 11.6824 19.3925 10.4436 18.7877V34.1275C10.4515 34.1545 10.5427 34.4867 11.379 35.027C12.298 35.6207 13.7492 36.2054 15.6717 36.6644C18.0007 37.2205 20.8712 37.5564 24 37.5564C27.1288 37.5564 29.9993 37.2205 32.3283 36.6644C34.2508 36.2054 35.702 35.6207 36.621 35.027C37.4573 34.4867 37.5485 34.1546 37.5563 34.1275V18.7877ZM41.5563 13.8546V34.1455C41.5563 36.1078 40.158 37.5042 38.7915 38.3869C37.3498 39.3182 35.4192 40.0389 33.2571 40.5551C30.5836 41.1934 27.3973 41.5564 24 41.5564C20.6027 41.5564 17.4164 41.1934 14.7429 40.5551C12.5808 40.0389 10.6502 39.3182 9.20848 38.3869C7.84205 37.5042 6.44365 36.1078 6.44365 34.1455L6.44365 13.8546C6.44365 12.2684 7.37223 11.0454 8.39581 10.2036C9.43325 9.3505 10.8137 8.67141 12.343 8.13948C15.4203 7.06909 19.5418 6.44366 24 6.44366C28.4582 6.44366 32.5797 7.06909 35.657 8.13948C37.1863 8.67141 38.5667 9.3505 39.6042 10.2036C40.6278 11.0454 41.5563 12.2684 41.5563 13.8546Z" fill="currentColor" fill-rule="evenodd"></path>
                </svg>
                <h1 class="text-xl font-bold">Orbit CRM</h1>
            </div>
        </header>

        <main class="flex flex-1 items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
            <div class="w-full max-w-md space-y-8">
                <div class="bg-neutral-light dark:bg-neutral-dark shadow-2xl ring-1 ring-black/5 rounded-lg p-8 sm:p-10">
                    <div class="text-center">
                        <h2 class="text-3xl font-bold tracking-tight text-text-light dark:text-text-dark">Welcome Back</h2>
                        <p class="mt-2 text-sm text-subtext-light dark:text-subtext-dark">Sign in to continue to your dashboard.</p>
                    </div>

                    <EditForm class="mt-8 space-y-6" Model="login" OnValidSubmit="HandleLoginAsync" formname="login">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger italic text-xs" />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="rounded-md border border-danger/30 bg-danger/10 text-danger px-3 py-2 text-sm">
                                @errorMessage
                            </div>
                        }

                        <div class="space-y-4 rounded-md">
                            <div>
                                <label class="sr-only" for="username">Username</label>
                                <InputText id="username" @bind-Value="login.Username"
                                           placeholder="Username"
                                           class="form-input relative block w-full appearance-none rounded-md border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark px-3 py-3 text-text-light dark:text-text-dark placeholder-subtext-light dark:placeholder-subtext-dark focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                                <ValidationMessage For="() => login.Username" class="text-danger italic text-xs mt-1" />
                            </div>
                            <div>
                                <label class="sr-only" for="password">Password</label>
                                <div style="position:relative;">
                                    <InputText id="password" @bind-Value="login.Password" type="@(showLoginPwd ? "text" : "password")" autocomplete="current-password"
                                               placeholder="Password"
                                               class="form-input relative block w-full appearance-none rounded-md border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark px-3 py-3 text-text-light dark:text-text-dark placeholder-subtext-light dark:placeholder-subtext-dark focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" style="padding-right:40px;" />
                                    <button type="button" aria-label="Şifreyi @(showLoginPwd ? "gizle" : "göster")" @onclick="(()=> showLoginPwd = !showLoginPwd)" style="position:absolute;right:8px;top:50%;transform:translateY(-50%);display:inline-flex;align-items:center;justify-content:center;width:28px;height:28px;border:none;background:transparent;cursor:pointer;">
                                        @if (showLoginPwd)
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.94 10.94 0 0 1 12 20C7 20 2.73 16.11 1 12c.66-1.53 1.69-3 3-4.24M10.58 10.58a2 2 0 1 0 2.83 2.83"/><path d="M1 1l22 22"/><path d="M9.88 4.12A10.94 10.94 0 0 1 12 4c5 0 9.27 3.89 11 8-1.03 2.38-2.77 4.46-4.88 5.94"/></svg>
                                        }
                                        else
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                                        }
                                    </button>
                                </div>
                                <ValidationMessage For="() => login.Password" class="text-danger italic text-xs mt-1" />
                            </div>
                        </div>

                        <div>
                            <button type="submit" disabled="@isLoading"
                                    class="group relative flex w-full justify-center rounded-md border border-transparent bg-primary py-3 px-4 text-sm font-semibold text-white hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background-light dark:focus:ring-offset-background-dark transition-colors">
                                @(isLoading ? "Giriş yapılıyor..." : "Log In")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </main>
    </div>
</div>

@code {
    private readonly LoginModel login = new();
    private string? errorMessage;
    private bool isLoading;
    private bool showLoginPwd = false;

    private async Task HandleLoginAsync()
    {
        errorMessage = null;
        isLoading = true;
        try
        {
            var token = await Auth.LoginAsync(login.Username, login.Password);
            await CircuitAuth.SignInAsync(token);
            Nav.NavigateTo("/");
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Kullanıcı adı veya şifre hatalı.";
        }
        catch
        {
            errorMessage = "Beklenmeyen bir hata oluştu. Lütfen tekrar deneyin.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private sealed class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Kullanıcı adı zorunludur.")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Şifre zorunludur.")]
        public string Password { get; set; } = string.Empty;
    }
}
